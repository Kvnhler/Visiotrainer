<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioTrainer.View.QuizLayouts.OnePicTwoAnswers"
             BackgroundColor="{StaticResource CardBackgroundColor}">

    <!-- whole layout: left dermoscopy, right explaination -->
    <Grid Padding="20"
          ColumnDefinitions="*,*"
          RowDefinitions="*">

        <!-- left column: dermoscopy -->
        <Image Grid.Column="0"
               x:Name="Image"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <!-- right column: 2 buttons-->
        <VerticalStackLayout Grid.Column="1"
                             Spacing="16"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <Button Text="Benigne"
                    Clicked="BenigneButton_OnClicked" />

            <Button Text="Maligne"
                    Clicked="MaligneButton_OnClicked" />

        </VerticalStackLayout>

    </Grid>
</ContentPage>