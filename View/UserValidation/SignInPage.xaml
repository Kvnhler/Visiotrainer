<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioTrainer.View.SignInPage"
             BackgroundColor="{StaticResource CardBackgroundColor}">
    
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="40" Spacing="20">

                <!-- username -->
                <Label Text="Benutzername:"
                       FontSize="18" />
                <Entry x:Name="UsernameEntry"
                       Placeholder="Benutzernamen eingeben"
                       FontSize="18" 
                       ReturnType="Next"
                       TextChanged="UsernameEntry_OnTextChanged"/>

                <!-- password -->
                <Label Text="Passwort:"
                       FontSize="18" />
                <Entry x:Name="UserPasswordEntry"
                       Placeholder="Passwort eingeben"
                       IsPassword="True"
                       FontSize="18" 
                       ReturnType="Done"
                       Completed="LoginButton_OnClicked"
                       TextChanged="UserPasswordEntry_OnTextChanged"/>
                <Label x:Name="ErrorLogin" Text="Falscher Benutzername oder Passwort" Style="{StaticResource PrimaryErrorLabelStyle}"/>
            
                <!-- lower buttons -->
                <HorizontalStackLayout Spacing="20" Margin="0,30,0,0">

                    <Button Text="Anmelden"
                            BackgroundColor="#28A745"
                            TextColor="White"
                            FontSize="18"
                            CornerRadius="10"
                            Clicked="LoginButton_OnClicked" />

                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>