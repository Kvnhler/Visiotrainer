<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisioTrainer.View.ControlOptions.FalseMadeQuestionControl.GeneralExplainationPage"
             BackgroundColor="{StaticResource CardBackgroundColor}">
    
        <!-- Entire layout: image on the left, answer buttons on the right -->
        <Grid Padding="20"
              ColumnDefinitions="*,*"
              RowDefinitions="*">

            <!-- Left column: dermoscopic image -->
            <Image Grid.Column="0"
                   x:Name="ExplainImage"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <VerticalStackLayout Grid.Column="1"
                                 Spacing="16"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">

                <!-- Explanation will be placed here later -->
                <Label
                    x:Name="AnswerState"
                    FontSize="30"
                />

                <Label
                    x:Name="Explaination"
                />
            
                <Button
                    Text="ZurÃ¼ck"
                    Clicked="Button_OnClicked"
                />

            </VerticalStackLayout>

        </Grid>
    </ContentPage>